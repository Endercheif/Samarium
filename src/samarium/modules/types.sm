Array: []?!;
Integer: \?!;
Null: (||)?!;
Slice: <<>>?!;
String: ""?!;
Table: {{}}?!;


@ Boolean {
    => value * {
        ? value?! :: ""?! {
            'value: {{"true" -> /, "false" -> \}}<<<-string.to_lower(value)>>;
        } ,, {
            'value: / ? value ,, \;
        }
    }

    ! * { * "true" ? 'value ,, "false"; }

    ? * { * 'value; }

    :: other * {
        * Boolean('value :: other.value);
    }

    > other * { * Boolean('value > other.value); }

    + other * {
        out: 'value + other.value;
        ? out > / {
            * out;
        } ,, {
            * Boolean(out);
        }
    }

    - other * {
        out: 'value - other.value;
        ? out < \ {
            * out;
        } ,, {
            * Boolean(out);
        }
    }

    ++ other * {
        * Boolean('value ++ other.value);
    }

    -- other * {
        * Boolean('value -- other.value);
    }

    +++ other * {
        * Boolean('value +++ other.value);
    }

    --- other * {
        * Boolean('value --- other.value);
    }

    & other * { * Boolean('value & other.value); }

    ^ other * { * Boolean('value ^ other.value); }

    | other * { * Boolean('value | other.value); }

    ~ * { * Boolean(\ ? 'value ,, /); }
}

