        hex: <-string.join(<-random.choices(<-string.HEXDIGITS, /\\\\\));
        hex<<//\\>>: "4";
        hex<</\\\\>>: "89ab"??;
        'hex: hex;
        'dec: Integer("x:" + hex);
    }

    ! * {
        * <-string.join(
            [
                'hex<<../\\\>>,
                'hex<</\\\..//\\>>,
                'hex<<//\\../\\\\>>,
                'hex<</\\\\../\/\\>>,
                'hex<</\/\\..>>
